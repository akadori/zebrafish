{
	"name": "zebrafish",
	"version": "0.1.1",
	"main": "./dist/main.js",
	"dependencies": {
		"zod": "^3.21.4",
		"zodiarg": "^0.2.1"
	},
	"devDependencies": {
		"@types/debug": "^4.1.7",
		"@types/express": "^4.17.17",
		"@types/node": "^18.15.11",
		"concurrently": "^8.2.0",
		"esbuild": "^0.18.16",
		"express": "^4.18.2",
		"node-fetch": "^3.3.1",
		"rome": "^12.0.0",
		"tsx": "^3.12.6",
		"typescript": "^5.0.4",
		"vite": "^4.2.1",
		"vitest": "^0.29.8",
		"debug": "^4.3.4"
	},
	"scripts": {
		"test": "vitest",
		"build":  "esbuild $(find ./lib -name '*.ts' -not -name '*.d.ts' -not -name '*.test.ts') --outdir=dist --platform=node --define:DEBUG_BUILD=false --format=cjs",
		"build:dev": "esbuild ./lib/cli.ts --outfile=dev/cli.js --platform=node --define:DEBUG_BUILD=true --format=cjs --bundle --sourcemap --watch",
		"run:example": "DEBUG=* node --enable-source-maps ./dist/cli.js -w examples ./examples/serve.js",
		"run:example:dev": "DEBUG=* node --enable-source-maps ./dev/cli.js -w examples ./examples/serve.js",
		"dev": "DEBUG=* concurrently --kill-others -i true --raw true  \"npm run build:dev\" \"npm run run:example:dev\""
	},
	"bin": {
		"zf": "./dist/cli.js"
	}
}
